{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "unsafeParameterDecoratorsEnabled": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
